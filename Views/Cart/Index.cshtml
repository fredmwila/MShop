
    <h3>Cart Page</h3>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Option</th>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>
        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td><a asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.ProductId">Remove</a></td>
                <td>@item.Product.ProductId</td>
                <td>@item.Product.ProductName</td>
                <td><img src="/images/products/@item.Product.ProductImage" width="60" /> </td>
                <td>@item.Product.ProductPrice</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.ProductPrice * item.Quantity)</td>
            </tr>
        }
        <tr>
            <td align="right" colspan="6">Sum</td>
            <td>
                @ViewBag.total
            </td>
        </tr>
    </table>
    <br>
    <a asp-controller="shop" asp-action="index">Continue Shopping</a>
